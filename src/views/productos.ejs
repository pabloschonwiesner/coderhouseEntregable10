<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head'); -%>
<body>

  <div class="container">
    <h1>Vista de Productos</h1>
  <button class="btn btn-outline-primary mb-3" type="button" onclick="document.location.href='http://localhost:8080/productos/nuevoProducto'">Nuevo producto</button>
  <table>
    <thead>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Foto</th>
    </thead>
    <tbody>
      <% if (productos.length > 0) { %>
        <% productos.forEach( function(item) { %>
          <tr>
            <td><%= item.title %></td>
            <td><%= item.price %></td>
            <td>
              <img class="rounded" src="<%= item.thumbnail %>" alt="<% item.title %>" width="50px" height="50px">
            </td>
            <td>
              <a href="<%= 'http://localhost:8080/productos/editarProducto/' + item.id %>">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                  <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                </svg>
              </a>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="4" align="center">No hay productos</td>
        </tr>
      <% } %> 
    </tbody>
  </table>
  </div>
  <script src="http://localhost:8080/script.js"></script>
</body>
</html>
