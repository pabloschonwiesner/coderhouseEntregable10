<form id="form">
  <div class="mb-3">
    <label for="title" class="form-label">Titulo</label>
    <input type="text" id="title" class="form-control" name="title" value="<%= producto.title %>">
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Precio</label>
    <input type="number" id="price" class="form-control" name="price" value="<%= producto.price %>" min="0" step="0.1">
  </div>
  <div class="mb-3">
    <label for="thumbnail" class="form-label">Imagen</label>
    <select name="thumbnail" id="thumbnail" value="<%= producto.thumbnail %>" class="form-select">
      <% if (producto.id != undefined) { %>
        <%- selectedOption(producto.thumbnail) %>
      <% } else { %>
        <option selected>Seleccionar una imagen</option>
        <% imagenes.forEach( function(item) { %>
          <option value="<%= item.path %>" label="<%= item.label %>"></option>
        <% }); %>
      <% } %>
    </select>    
  </div>
  <button class="btn btn-primary" type="submit">Guardar</button>
  <% if (producto.id != undefined) { %>
    <button id="eliminar" class="btn btn-danger">Eliminar producto</button>
  <% } %>

</form>
